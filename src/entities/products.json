
{
  "name": "products",
  "options": {
    "validator": {
      "$jsonSchema": {
        "bsonType": "object",
        "required": ["name", "category", "currentPrice", "inStock", "createdAt"],
        "properties": {
          "name": {
            "bsonType": "string",
            "description": "Nome do produto"
          },
          "category": {
            "bsonType": "string",
            "enum": ["streaming", "musica", "ferramentas", "educacao"],
            "description": "Categoria do produto"
          },
          "currentPrice": {
            "bsonType": "number",
            "minimum": 0,
            "description": "Preço único do produto"
          },
          "oldPrice": {
            "bsonType": "number",
            "minimum": 0,
            "description": "Preço anterior (opcional)"
          },
          "inStock": {
            "bsonType": "bool",
            "description": "Disponibilidade em estoque"
          },
          "description": {
            "bsonType": "string",
            "description": "Descrição do produto"
          },
          "brand": {
            "bsonType": "string",
            "description": "Marca/serviço do produto"
          },
          "imageClass": {
            "bsonType": "string",
            "description": "Classe CSS para estilização"
          },
          "creator": {
            "bsonType": "string",
            "description": "Criador do produto"
          },
          "createdAt": {
            "bsonType": "string",
            "title": "datetime",
            "description": "Data de criação"
          },
          "updatedAt": {
            "bsonType": "string",
            "title": "datetime",
            "description": "Data de atualização"
          }
        },
        "additionalProperties": true
      }
    },
    "validationLevel": "moderate",
    "validationAction": "warn"
  }
}
