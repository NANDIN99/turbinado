
{
  "name": "cart_items",
  "options": {
    "validator": {
      "$jsonSchema": {
        "bsonType": "object",
        "required": ["sessionId", "productId", "quantity", "createdAt"],
        "properties": {
          "sessionId": {
            "bsonType": "string",
            "description": "ID da sessão do usuário"
          },
          "productId": {
            "bsonType": "string",
            "description": "ID do produto"
          },
          "quantity": {
            "bsonType": "int",
            "minimum": 1,
            "description": "Quantidade do produto"
          },
          "createdAt": {
            "bsonType": "string",
            "title": "datetime",
            "description": "Data de adição ao carrinho"
          }
        },
        "additionalProperties": true
      }
    },
    "validationLevel": "moderate",
    "validationAction": "warn"
  }
}
